<?xml version="1.0" encoding="utf-8"?>
<Container version="1">
  <Name>CreepMiner</Name>
  <Overview>CreepMiner Burstcoin Mining Software</Overview>
  <Description>CreepMiner Burstcoin Mining Software</Description>
  <Registry>https://registry.hub.docker.com/u/whumphrey/creepminer/</Registry>
  <Repository>whumphrey/creepminer</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
    <Variable>
      <Name>AUTO_START</Name>
      <Value>TRUE</Value>
    </Variable>
    <Variable>
      <Name>TZ</Name>
      <Value>UTC</Value>
    </Variable>
  </Environment>
  <Network>bridge</Network>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>8124</HostPort>
        <ContainerPort>8124</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>9001</HostPort>
        <ContainerPort>9001</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>9002</HostPort>
        <ContainerPort>9002</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/creepminer_config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/plot1/</HostDir>
      <ContainerDir>/plot/01</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/plot2/</HostDir>
      <ContainerDir>/plot/02</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/plot3/</HostDir>
      <ContainerDir>/plot/03</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:8124]/</WebUI>
  <Icon>https://raw.githubusercontent.com/harry1453/burstcoin-docker-templates/master/burstcoin/images/creepMiner.png</Icon>
  <ExtraParams></ExtraParams>
  <Banner></Banner>
  <TemplateURL>https://github.com/harry1453/burstcoin-docker-templates</TemplateURL>
</Container>
